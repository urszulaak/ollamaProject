<MyLayout>:
    orientation: "vertical"
    padding: 10

    # Tekst na górze
    Label:
        id: header
        text: "To jest nagłówek"
        font_size: "24sp"
        size_hint: 1, 0.1
        bold: True

    # Obrazek
    Image:
        id: face_img
        source: "exampleFaceStatic.png"
        size_hint: 1, 0.5

    # Box na dwa teksty
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 0.4

        Label:
            id: command
            text: ""
            font_size: "24sp"
            size_hint: 1, 0.1
            halign: "center"
            valign: "middle"

        Label:
            id: model_response
            text: ""
            font_size: "24sp"
            size_hint: 1, 0.9
            halign: "center"
            valign: "top"
            text_size: self.size
            wrap: True
